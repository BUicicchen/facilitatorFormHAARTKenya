    $("#registerEmailFacilitator").val(current + "@haartkenya.org");
  });

  $("#registerEmailAdministrator").val("@haartkenya.org");

  $("#registerEmailAdministrator").on('input', function() {
    var current = $("#registerEmailAdministrator").val();
    var findIndex = current.indexOf("@");
    current = current.slice(0,findIndex);
    $("#registerEmailAdministrator").val(current + "@haartkenya.org");
  });

  $("#submitAdminLogin").click(function () {
    $("#adminLogin").submit();
  });

  $("#submitFacilitatorLogin").click(function () {
    $("#facilitatorLogin").submit();
  });

  $("#submitFacilitatorRegister").click(function(){
    $("#facilitatorRegister").submit();
  });

  $("#submitAdminRegister").click(function () {
    $("#adminRegister").submit();
  });

});


</script>
