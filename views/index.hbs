<script>
$(document).ready(function () {

  $("#usernameAdmin").val("@haartkenya.org");

  $("#usernameAdmin").on('input', function() {
    var current = $("#usernameAdmin").val();
    var findIndex = current.indexOf("@");
    current = current.slice(0,findIndex);
    $("#usernameAdmin").val(current + "@haartkenya.org");
  });

  $("#usernameFacilitator").val("@haartkenya.org");

  $("#usernameFacilitator").on('input', function() {
    var current = $("#usernameFacilitator").val();
